{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "tsc",
            "args": [
                "-p",
                "tsconfig.json"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [
                "$tsc"
            ]
        },
        {
            "label": "watch",
            "type": "shell",
            "command": "tsc",
            "args": [
                "-p",
                "tsconfig.json",
                "--watch"
            ],
            "group": "build",
            "problemMatcher": [
                "$tsc-watch"
            ]
        },
        {
            "label": "prepublish",
            "type": "shell",
            "command": "npm",
            "args": [
                "run",
                "build"
            ],
            "group": "build"
        }
    ]
}